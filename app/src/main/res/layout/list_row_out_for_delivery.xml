<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/out_for_delivery_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_3sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/out_for_delivery_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Customer Name"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/out_for_delivery_package_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/out_for_delivery_customer_name"
                android:gravity="left"
                android:text="Package ID"
                android:textColor="@color/blueTurquoise"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/out_for_delivery_invoice_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Invoice No"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/out_for_delivery_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/out_for_delivery_exp_dod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Exp dod"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/out_for_delivery_invoice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/out_for_delivery_gatepass_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/out_for_delivery_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:text="Delivery User"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/zipCode_textView"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/gray_order"></View>

</LinearLayout>
             android:layout_gravity="right"
             />-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/actions"
            android:textAllCaps="false"
            android:textColor="@color/blueTurquoise"
            android:textSize="22sp"
            android:textStyle="normal" />


        <LinearLayout
            android:id="@+id/actions_items_inside_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_page_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/items_inside_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Items inside package"
                android:textColor="#8D8D8D"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_package_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/actions_package_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Package Status"
                android:textColor="@color/home_page_text_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_package_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_page_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Package History"
                android:textColor="#8D8D8D"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Customer Details"
                android:textColor="@color/home_page_text_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/actions_print_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_page_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Download Invoice"
                android:textColor="#8D8D8D"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_print_delivery_challan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Download Delivery Challan"
                android:textColor="@color/home_page_text_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/actions_other_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_page_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Upload other documents"
                android:textColor="#8D8D8D"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_print_gatepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Download Gatepass"
                android:textColor="@color/home_page_text_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/actions_print_loading_slip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_page_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Download Loading Slip"
                android:textColor="@color/home_page_text_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_return" />



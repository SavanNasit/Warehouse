<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/package_details_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:scrollbars="none"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/package_details_empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no_data_available"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/border_edittext_gray"
                android:padding="@dimen/_10sdp"
                android:text="Package Delivery Details:"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12sdp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_name"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Customer Name:"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:text="Poonam"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="left|center"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_mobile"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Mobile No:"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_email"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Email:"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_billing_address"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Billing Address:"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_delivery_address"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Delivery Address:"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/darkGray"

                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_tax_invoice_serial_no"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Tax Invoice Serial No."
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/package_details_invoice_date"
                    style="@style/EditTextCustomHolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Invoice Date:"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_primary"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/EditTextCustomHolo" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:clipToPadding="false"
                android:gravity="left|center"
                app:hintTextAppearance="@style/CustomTextAppearance">

                <AutoCompleteTextView
                    android:id="@+id/package_details_invoice_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Invoice Type:"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_10sdp"
                    />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/package_details_upload_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/upload"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/package_details_create_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Create Package"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>
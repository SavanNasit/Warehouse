<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_inventory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/list_row_inventory_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/list_row_inventory_sku_code"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/list_row_inventory_id"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/home_page_text_gray"
                android:gravity="right"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/list_row_inventory_received_quantity"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/list_row_inventory_manufacture_date"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/list_row_inventory_available_stock"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/list_row_inventory_exp_date"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/home_page_text_gray"
                android:gravity="right"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

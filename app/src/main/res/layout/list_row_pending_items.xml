<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_2sdp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        card_view:cardCornerRadius="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/border_edittext_gray"
            android:weightSum="2">

            <ImageView
                android:id="@+id/list_row_pending_items_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="fitXY"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_package_selection_filled"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/list_row_pending_items_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:ellipsize="end"
                android:text="kook and keech Black and white checked"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/list_row_order_item_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:text="Poonam"
                    android:visibility="gone"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />
            </LinearLayout>



            <TextView
                android:id="@+id/list_row_pending_items_sku_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="22223443"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_9sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
              >


                <View
                    android:id="@+id/list_row_pending_items_view"
                    android:layout_width="0.001dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:visibility="gone"
                    android:background="@color/primary" />

                <TextView
                    android:id="@+id/list_row_pending_items_batch_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/home_page_text_gray"
                    android:text="64654545766"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/list_row_order_item_available_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2342343"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/list_row_order_item_view_one"
                    android:layout_width="0.001dp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@color/primary" />


                <TextView
                    android:id="@+id/list_row_order_item_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2342343"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/list_row_order_item_view_two"
                    android:layout_width="0.001dp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@color/primary" />

                <TextView
                    android:id="@+id/list_row_order_item_purchased_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2342343"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/list_row_pending_items_quantity_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textColor="@color/white"
                    android:background="@color/md_yellow_800"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="0"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="/"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@color/md_yellow_800"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/list_row_pending_items_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md_yellow_800"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:gravity="left|center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/list_row_pending_items_quantity_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md_yellow_800"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:gravity="left|center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />
            </LinearLayout>



            <TextView
                android:id="@+id/list_row_order_item_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Sold By Poonam Kukreti"
                android:textColor="@color/home_page_text_gray"
                android:textSize="@dimen/_9sdp"
                android:textStyle="italic" />

        </LinearLayout>



    </LinearLayout>

            <View
                android:id="@+id/list_row_order_item_view"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@color/text_black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="1">


                <TextView
                    android:id="@+id/list_row_order_item_add_quantity"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add Quantity"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0.001dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@color/text_black" />


                <TextView
                    android:id="@+id/list_row_order_item_add_all"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add All"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/home_page_text_gray"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_3sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customer_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Customer Name"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/package_id_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_name_textView"
                android:gravity="left"
                android:text="Package ID"
                android:textColor="@color/blueTurquoise"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/invoice_no_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/package_id_textView"
                android:text="Invoice No"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/exp_dod_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invoice_no_textView"
                android:layout_gravity="center"
                android:text="Exp dod"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/zipCode_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exp_dod_textView"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/invoice_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_order"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/zipCode_textView"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/gray_order"></View>

</LinearLayout>
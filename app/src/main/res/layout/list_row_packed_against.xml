<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/package_id_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Package ID"
            android:textColor="@color/blueTurquoise"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/invoice_date_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textColor="#8D8D8D"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/customer_name_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:text="Customer Name"
        android:textColor="#8D8D8D"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/invoice_no_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:text="Invoice No"
        android:textColor="#8D8D8D"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/exp_dod_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:text="Exp dod"
        android:textColor="#8D8D8D"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zipCode_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:textColor="#8D8D8D"
        android:textSize="14sp" />

</LinearLayout>
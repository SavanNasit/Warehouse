<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.accrete.warehouse">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppIllustration.AppIllustrationActivity" />
        <activity
            android:name=".domain.DomainActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />
        <activity
            android:name=".login.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />
        <activity
            android:name=".password.PasswordActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="192.168.1.10"
                    android:pathPattern="/..*"
                    android:scheme="http" />
                <data
                    android:host="www.inside.accreteglobus.com"
                    android:pathPattern="/..*"
                    android:scheme="http" />
                <data
                    android:host="www.demo.sixorbit.com"
                    android:pathPattern="/..*"
                    android:scheme="http" />
                <data
                    android:host="test.sixorbit.com"
                    android:pathPattern="/..*"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navigationView.DrawerActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ScannerActivity" />
        <!-- android:value="7feb39cbdc2eecf7a647a8588c9228d73aad6c2a" -->
        <!--
          <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7feb39cbdc2eecf7a647a8588c9228d73aad6c2a" />
        -->

        <activity android:name=".MainActivity" />
        <activity android:name=".OrderItemActivity" />
        <activity android:name=".CustomerDetailsActivity" />
        <activity android:name=".PackageHistoryActivity" />
        <activity android:name=".ItemsInsidePackageActivity" />
        <activity android:name=".PackageOrderStatusActivity" />
        <activity android:name=".ViewConsignmentActivity" />
        <activity
            android:name=".ViewOrderItemsActivity"
            android:theme="@style/MyMaterialTheme"
            android:label="View Order Items"/>
        <activity
            android:name=".CreateGatepassActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>
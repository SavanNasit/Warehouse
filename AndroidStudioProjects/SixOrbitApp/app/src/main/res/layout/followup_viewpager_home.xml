<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/recent_followup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_followup_viewpager_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:text="Vishwak Chandra" />

            <TextView
                android:id="@+id/textView_followup_viewpager_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                tools:text="01 :25, Sep 15  2017," />

            <TextView
                android:id="@+id/textView_followup_viewpager_leadid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/textView_followup_viewpager_callbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/_9sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingTop="@dimen/_9sdp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/icon_call" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="@string/Call"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.001"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/textView_followup_viewpager_emailbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/_9sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingTop="@dimen/_9sdp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="Email"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.001"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/textView_followup_viewpager_rec_followp_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/_11sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingTop="@dimen/_11sdp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_home_viewpager_recfollup" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="Record"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

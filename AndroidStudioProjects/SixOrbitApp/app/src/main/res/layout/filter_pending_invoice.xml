<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_filter_clear_all"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@drawable/ic_uncheck_all" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif"
        android:text="Filter"
        android:textAllCaps="false"
        android:textColor="@color/blueTurquoise"
        android:textSize="22sp"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="FROM"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="TO"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/dialog_filter_edt_from"
                style="@android:style/Widget.EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border_for_calendar"
                android:focusable="false"
                android:gravity="center"
                android:text="Start Date"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_filter_edt_to"
                style="@android:style/Widget.EditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="05dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border_for_calendar"
                android:focusable="false"
                android:gravity="center"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/dialog_filter_apply"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@color/green"
            android:elevation="10dp"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialog_filter_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@color/gray"
            android:elevation="10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/call_textView"
            style="Custom Notification Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="Call"
            android:textColor="@color/blueTurquoise"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_textView"
            style="Custom Notification Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="Email"
            android:textColor="@color/blueTurquoise"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/followupInfo_textView"
            style="Custom Notification Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="Details"
            android:textColor="@color/blueTurquoise"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <!--<ImageView
            android:id="@+id/follow_up_call_customer"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_call" />

        <ImageView
            android:id="@+id/follow_up_email_customer"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/follow_up_details"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_detail_view" />-->

    </LinearLayout>
</LinearLayout>
